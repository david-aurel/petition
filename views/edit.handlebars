{{#data}}
<div class="card mt-4 mx-auto col-md-8">

    <form id='profile' class="pt-4" action='/edit' method="POST">
        {{#if err}}
        <div class='text-danger mb-4'>Invalid input, please try again.</div>
        {{/if}}
        <div class="row mb-3 form-group">
            <div class="col">
                <input type="text" class="form-control" placeholder="First name" name="first" value="{{first}}">
            </div>
            <div class="col">
                <input type="text" class="form-control" placeholder="Last name" name="last" value='{{last}}'>
            </div>
        </div>

        <div class=" form-group">
            <input type="email" class="form-control" name="email" placeholder="Email" value='{{email}}'>
        </div>
        <div class="form-group">
            <input type="password" class="form-control" id="exampleInputPassword1" name="pass"
                placeholder="New password">
        </div>

        <br>

        <div class="text-secondary mb-2">(Optional)</div>
        <div class="form-group row">
            <div class="col">
                <input type="text" class="form-control" name="age" placeholder="Age" value='{{age}}'>
            </div>
            <div class="col">
                <input type="text" class="form-control" name="city" placeholder="City" value="{{city}}">
            </div>
            <div class="col">
                <input type="text" class="form-control" name="url" placeholder="Website" value='{{url}}'>
            </div>
        </div>
        <input type="hidden" name="_csrf" value="{{../csrfToken}}">

        <hr class="my-4">
    </form>

    <div class="d-flex justify-content-between form-group row px-4 mb-4">
        <div>
            <input type='submit' form='profile' class="btn btn-success" value='Update' />
        </div>
        {{#if sig}}
        <form action='/sig/delete' method='POST'>
            <input type="hidden" name="_csrf" value="{{../csrfToken}}">
            <button type="submit" class="btn btn-danger">Delete signature</button>
        </form>
    </div>
</div>
{{/if}}
{{/data}}