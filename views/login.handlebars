<div class="card mt-4 mx-auto col-md-8">

    <form class=" p-4" action='/login' method="POST">
        {{#if login_err}}
        <div class='text-danger mb-4'>This user doesn't exist, please <a href='/signup'>sign up</a> first.</div>
        {{/if}}
        {{#if pass_err}}
        <div class='text-danger mb-4'>Wrong password, please try again.</div>
        {{/if}}

        <div class=" form-group">
            <input type="email" class="form-control" name="email" placeholder="Email">
        </div>
        <div class="form-group">
            <input type="password" class="form-control" id="exampleInputPassword1" name="pass" placeholder="Password">
        </div>
        <input type="hidden" name="_csrf" value="{{csrfToken}}">

        <hr class="my-4">

        <button type="submit" class="btn btn-primary">Log in</button>
    </form>
</div>