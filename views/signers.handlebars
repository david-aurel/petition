<div class="container pt-4 col-md-10">
    {{#if city}}
    <p class="lead">All signatures from {{city}}</p>
    {{else}}
    <p class="lead">Thank you, {{first}}. Your signature is a huge contribution!</p>
    <img class='d-block sigImg mb-2' src="{{sig}}" alt="image of signature">
    <hr class="my-4">
    <a class="btn btn-outline-primary" data-toggle="collapse" href="#signers">Show all {{count}} signers</a>
    <div class="collapse" id="signers">
        {{/if}}
        <table class="table table-responsive d-md-table mx-auto mt-4">
            <tbody>
                {{#data}}
                <tr class="row">
                    <td class="col-md-7"><span class='text-primary'>{{first}} {{last}}</span> {{#if age}}<span
                            class="text-secondary">({{age}})</span>{{#if msg}},{{/if}}{{/if}}{{#if msg}} says
                        <h5 class="d-inline font-weight-bold text-success">"{{msg}}"</h5>{{/if}}
                    </td>
                    <td class="col-md-2">{{#if url}}<div class="text-truncate"><a href="{{url}}"
                                class="text-danger">{{url}}</a>
                        </div>{{/if}}</td>
                    <td class="col-md-3 font-italic text-warning">
                        <div class="text-truncate">{{#if city}}<a class='text-warning'
                                href='/signers/{{city}}'>{{city}}</a>,
                            {{/if}} <span class="time">{{time}}</span>
                        </div>
                    </td>
                </tr>
                {{/data}}
            </tbody>
        </table>
    </div>

</div>

<script src="/time.js"></script>